{{!-- Edit Post --}}
<div class="card dashboard-card">
    <div class="card-header">
        <h2>EDIT POST</h2>
    </div>
    <div class="card-body content-card">
        <input type="hidden" name="post-id" value="{{post.id}}" id="post-id" />
        <div class="form-group">
            <label class="form-label" for="title">TITLE:</label>
            <input type="text" name="title" id="title" value="{{post.title}}" class="col-sm-12 form-input" />
        </div>
        <div class="form-group">
            <label class="form-label" for="content">CONTENT:</label>
            <textarea type="text" name="content" class="col-sm-12 form-input" id="content">{{post.content}}</textarea>
        </div>
        <button type="submit" class="btn btn-dark" id="update-btn">UPDATE</button>

        <button type="button" id="delete-btn" class="btn btn-dark">DELETE</button>
    </div>
</div>

<script src="/js/edit.js"></script>