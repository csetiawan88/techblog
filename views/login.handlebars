<div class="container">
    <div class="col-sm-12 log-form">
        <div class="login-text">
            <h2 class="page-title">LOGIN</h2>
        </div>
        <form id="login-form">
            <div class="form-group">
                <label for="name">USERNAME:</label>
                <input class="col-sm-12 form-input" type="text" id="username-login" />
            </div>
            <div class="form-group">
                <label for="password-login">PASSWORD:</label>
                <input class="col-sm-12 form-input" type="password" id="password-login" />
            </div>
            <div class="form-group">
                <button class="col-sm-12 btn btn-primary" type="submit">LOGIN</button>
            </div>

            <a class="nav-link text-center col-sm-12" href="/signup">Click here to Sign up!</a>
        </form>
    </div>
</div>

